source 'https://rubygems.org'

# Sinatra для создания веб-приложений
gem 'sinatra'

# Библиотека для взаимодействия с Discord
gem 'discordrb'

# Jekyll для генерации статических страниц
gem 'jekyll'

# Если вам нужны дополнительные плагины Jekyll, добавьте их сюда
# Например:
# gem 'jekyll-feed'
# gem 'jekyll-seo-tag'
# gem 'jekyll-paginate'

# Если используете Bundler для управления зависимостями
gem 'bundler', require: false
